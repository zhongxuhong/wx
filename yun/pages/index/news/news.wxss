/* 显示一行自动隐藏 */
.title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-family:”微软雅黑”;
  font-size: 40rpx;
}

/* 显示三行自动隐藏 */
.content{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-family:”微软雅黑”;
  font-size: 32rpx;
  text-indent: 80rpx;
}